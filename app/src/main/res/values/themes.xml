<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Quizzer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>


    <style name="QuizAnswerButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/btn_rounded</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/boom</item>
        <item name="android:radius">20dp</item>
    </style>

    <style name="ConfirmAnswerButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@drawable/btn_rounded</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/boom</item>
        <item name="android:radius">20dp</item>
    </style>

    <style name="Theme.Quizzer" parent="Base.Theme.Quizzer" />
</resources>